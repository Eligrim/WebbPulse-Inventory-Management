rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if isAuthenticated() && isTokenValid();

      function isAuthenticated() {
        return request.auth != null;
      }

      function isTokenValid() {
        // Ensure that the token's auth_time is after the revokeTime
        return request.auth.token.auth_time > request.auth.token.revokeTime;
      }
    }
  }
}
