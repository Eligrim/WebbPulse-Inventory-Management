rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if isAuthenticated() && isTokenValid();

      function isAuthenticated() {
        return request.auth != null;
      }

      function isTokenValid() {
        return request.auth.token.auth_time > request.auth.token.revokeTime || !request.auth.token.revokeTime;
      }
    }
  }
}
